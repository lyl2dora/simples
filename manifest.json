{
  "manifest_version": 3,
  "name": "自定义新标签页",
  "version": "1.0.0",
  "description": "简洁美观的新标签页，支持Bing/Pexels壁纸、可拖拽布局、快捷链接、搜索建议和一言",
  "permissions": [
    "storage",
    "search",
    "alarms",
    "favicon"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://cn.bing.com/*",
    "https://v1.hitokoto.cn/*",
    "https://suggestqueries.google.com/*",
    "https://api.pexels.com/*",
    "wss://stream.binance.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

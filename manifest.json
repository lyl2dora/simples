{
  "manifest_version": 3,
  "name": "Simple New Tab",
  "version": "1.0.0",
  "description": "A beautiful new tab page with Bing wallpapers, Hitokoto quotes, and customizable shortcuts",
  "permissions": [
    "storage",
    "search",
    "alarms"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://cn.bing.com/*",
    "https://v1.hitokoto.cn/*",
    "https://suggestqueries.google.com/*",
    "https://www.google.com/s2/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
